<h1>Ranking</h1>

<div class="row">
    <div class="col-xs-12 col-sm-offset-3 col-sm-6">
        <table class="table table-ranking">
            <tr>
                <th></th>
                <th>Nom</th>
                <th>Elo</th>
            </tr>
            <% var rank = 1 %>
            <% for(var i = 0; i < users.length; i++){ %>
            <tr
                    <% if(users[i].id == req.session.user.id){ %>
                    class="my-rank"
                    <% } %>
            >

                <td><%= rank %></td>
                <% rank++ %>
                <td><%= users[i].name %></td>
                <td><%= users[i].elo %></td>
            </tr>
            <% } %>
            <tr style="background-color: black;">
                <td style="height:10px; background-color: black"></td>
                <td style="height:10px; background-color: black"></td>
                <td style="height:10px; background-color: black"></td>
            </tr>

            <tr>
                <td><%= myRank %></td>
                <td><%= req.session.user.name %></td>
                <td><%= req.session.user.elo %></td>
            </tr>

        </table>
    </div>
</div>
