<div class="col-xs-9" id="chat-content" style="background-color: white; height:600px; overflow-y: scroll">
</div>
<div class="col-xs-3" id="list-users" style="background-color: black; height:600px; border: 1px solid blue">
</div>
<form id="form-message" data-type="message">
    <div class="form-group">
        <input type="text" class="form-control col-xs-10" id="input-message" placeholder="<%= __('text message') %>">
    </div>
</form>
<form id="form-img" data-type="img">
    <div class="form-group">
        <input type="text" class="form-control col-xs-10" id="input-img" placeholder="<%= __('img link') %>">
    </div>
</form>
<form id="form-video" data-type="video">
    <div class="form-group">
        <input type="text" class="form-control col-xs-10" id="input-video"
               placeholder="<%= __('youtube video link') %>">
    </div>
</form>
<form id="form-song-request" data-type="song-request">
    <div class="form-group">
        <input type="text" class="form-control col-xs-10" id="input-song-request"
               placeholder="<%= __('search music') %>">
    </div>
</form>

