<script>
    <%- partial('./partials/client-js/client-chat.js') %>
</script>

<div class="col-xs-9" id="chat-content" style="background-color: white; height:600px; overflow-y: scroll">
</div>
<div class="col-xs-3" id="list-users" style="background-color: black; height:600px; border: 1px solid blue">
</div>
<form id=" form-message" data-type="message">
    <div class="form-group">
        <input type="text" class="form-control col-xs-10" id="input-message" placeholder="Text Message">
    </div>
</form>
<form id="form-img" data-type="img">
    <div class="form-group">
        <input type="text" class="form-control col-xs-10" id="input-img" placeholder="Img link">
    </div>
</form>
<form id="form-video" data-type="video">
    <div class="form-group">
        <input type="text" class="form-control col-xs-10" id="input-video" placeholder="Youtube video link">
    </div>
</form>
<form id="form-song-request" data-type="song-request">
    <div class="form-group">
        <input type="text" class="form-control col-xs-10" id="input-song-request" placeholder="Deezer link">
    </div>
</form>

<div id="modal-tracks-choice" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <div id="choice-tracks">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" id="btn-close-modal" class="btn btn-default" data-dismiss="modal">Annuler</button>
                <button type="button" id="btn-choice-track" class="btn btn-primary">Choisir</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
